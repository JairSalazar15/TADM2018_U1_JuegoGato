<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tdm2018.ittepic.edu.tadm2018_u1_juegogato.MainActivity">

    <TextView
        android:id="@+id/textViewGato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Gato!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.016" />

    <Button
        android:id="@+id/btnA2"
        android:layout_width="52dp"
        android:layout_height="50"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnA3"
        app:layout_constraintTop_toTopOf="@+id/btnA3" />

    <Button
        android:id="@+id/btnB2"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnB3"
        app:layout_constraintTop_toTopOf="@+id/btnB3" />

    <Button
        android:id="@+id/btnC2"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnC3"
        app:layout_constraintTop_toTopOf="@+id/btnC3" />

    <Button
        android:id="@+id/btnA3"
        android:layout_width="52dp"
        android:layout_height="50dp"
        tools:layout_editor_absoluteX="225dp"
        tools:layout_editor_absoluteY="150dp" />

    <Button
        android:id="@+id/btnB3"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/btnA3"
        tools:layout_editor_absoluteY="210dp" />

    <Button
        android:id="@+id/btnC3"
        android:layout_width="52dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toEndOf="@+id/btnB3"
        tools:layout_editor_absoluteY="270dp" />

    <Button
        android:id="@+id/btnC1"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnC2"
        app:layout_constraintTop_toTopOf="@+id/btnC2" />

    <Button
        android:id="@+id/btnB1"
        android:layout_width="52dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnB2"
        app:layout_constraintTop_toTopOf="@+id/btnB2" />

    <Button
        android:id="@+id/btnA1"
        android:layout_width="52"
        android:layout_height="50"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/btnA2"
        app:layout_constraintTop_toTopOf="@+id/btnA2" />


</android.support.constraint.ConstraintLayout>
